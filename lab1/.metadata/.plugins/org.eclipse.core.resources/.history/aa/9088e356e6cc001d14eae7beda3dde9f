package lab1;

import java.util.ArrayList;

public class DetailShapeService {
	public static Detail GetDetailWithUniqueShape(ArrayList<Detail> details)
	{
		Detail detailWithUniqueShape = null;
		boolean isUnique;
		
		for (int i = 0; i < details.size(); i++)
		{
			isUnique = true;
			
			for (int j = 0; j < details.size(); j++)
			{
				if (details.get(i).shape == details.get(j).shape && i != j)
				{
					isUnique = false;
				}
			}
			
			if (isUnique)
			{
				detailWithUniqueShape = details.get(i);
				break;
			}
		}
		
		return detailWithUniqueShape;
	}
}
